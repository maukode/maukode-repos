---
// Import Starlight components for the page layout.
import { Card, CardGrid } from "@astrojs/starlight/components";
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";

// Define the frontmatter for this page.
const frontmatter = {
  title: "Our Open Source Software",
  description:
    "Explore our open-source libraries. We are committed to building high-quality, developer-friendly tools for the modern web.",
  template: "splash",
  hero: {
    title: "",
  },
};
---

<StarlightPage frontmatter={frontmatter}>
  <div class="max-w-5xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2
        class="text-4xl font-bold tracking-tight text-slate-900 dark:text-slate-100 sm:text-5xl"
      >
        Building in the Open
      </h2>
      <p class="mt-4 text-lg leading-8 text-slate-600 dark:text-slate-400">
        We believe in the power of community and collaboration. Our open-source
        projects are our contribution to the developer ecosystem, built to solve
        real-world problems.
      </p>
    </div>

    <div class="mt-12">
      <h3
        class="text-3xl font-bold tracking-tight text-slate-900 dark:text-slate-100 mb-8 text-center sm:text-left"
      >
        Featured Libraries
      </h3>
      <CardGrid>
        <Card title="@maukode/headless-media" icon="microphone">
          A powerful, framework-agnostic library for recording audio, video, and
          screen content directly in the browser using the MediaRecorder API.
          <div class="flex gap-4 mt-4">
            <a
              href="https://www.npmjs.com/package/@maukode/headless-media"
              target="_blank"
              rel="noopener noreferrer"
              class="text-sky-600 dark:text-sky-400 font-semibold hover:underline"
              >NPM</a
            >
            <a
              href="https://github.com/maukode/headless-media"
              target="_blank"
              rel="noopener noreferrer"
              class="text-sky-600 dark:text-sky-400 font-semibold hover:underline"
              >GitHub</a
            >
          </div>
        </Card>
        <Card title="@maukode/react-headless-media" icon="react">
          The official React wrapper for Headless Media. Seamlessly integrate
          media recording into your React apps with intuitive hooks and
          components.
          <div class="flex gap-4 mt-4">
            <a
              href="https://www.npmjs.com/package/@maukode/react-headless-media"
              target="_blank"
              rel="noopener noreferrer"
              class="text-sky-600 dark:text-sky-400 font-semibold hover:underline"
              >NPM</a
            >
            <a
              href="https://github.com/maukode/react-headless-media"
              target="_blank"
              rel="noopener noreferrer"
              class="text-sky-600 dark:text-sky-400 font-semibold hover:underline"
              >GitHub</a
            >
          </div>
        </Card>
        <Card title="@maukode/siesvi" icon="table">
          A high-performance, stream-based CSV parser and stringifier for
          Node.js, built for handling large datasets with a minimal memory
          footprint.
          <div class="flex gap-4 mt-4">
            <a
              href="https://www.npmjs.com/package/@maukode/siesvi"
              target="_blank"
              rel="noopener noreferrer"
              class="text-sky-600 dark:text-sky-400 font-semibold hover:underline"
              >NPM</a
            >
            <a
              href="https://github.com/maukode/siesvi"
              target="_blank"
              rel="noopener noreferrer"
              class="text-sky-600 dark:text-sky-400 font-semibold hover:underline"
              >GitHub</a
            >
          </div>
        </Card>
      </CardGrid>
    </div>

    <div
      class="mt-16 text-center bg-slate-100 dark:bg-slate-800/50 p-8 rounded-lg"
    >
      <h3
        class="text-3xl font-bold tracking-tight text-slate-900 dark:text-slate-100"
      >
        Join the Community
      </h3>
      <p class="mt-4 text-lg leading-8 text-slate-600 dark:text-slate-400">
        Have an idea, a bug report, or a pull request? We welcome contributions
        of all kinds. Visit our GitHub repositories to get started.
      </p>
      <div class="mt-6">
        <a
          href="https://github.com/maukode"
          class="inline-block bg-slate-900 dark:bg-slate-200 text-white dark:text-slate-900 font-bold py-3 px-6 rounded-lg hover:bg-slate-700 dark:hover:bg-slate-300 transition-colors"
        >
          Visit MauKode on GitHub
        </a>
      </div>
    </div>
  </div>
</StarlightPage>
