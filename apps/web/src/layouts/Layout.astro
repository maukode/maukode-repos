---
// apps/web/src/layouts/Layout.astro
export interface Props {
  title: string;
  description?: string;
}
const { title, description = 'Mau Kode: Your AI-Powered Developer Toolkit' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-white text-zinc-900">
    <header class="p-4 border-b">
      <nav class="max-w-4xl mx-auto flex justify-between items-center">
        <a href="/" class="font-bold text-lg">Mau Kode</a>
        <div class="flex gap-4">
          <a href="/docs/intro" class="hover:text-blue-600">Docs</a>
          <a href="/blog" class="hover:text-blue-600">Blog</a>
          <a href="/ai" class="bg-blue-600 text-white px-3 py-1 rounded-md">AI Assistant</a>
        </div>
      </nav>
    </header>
    <main class="p-4 max-w-4xl mx-auto w-full">
      <slot /> </main>
  </body>
</html>